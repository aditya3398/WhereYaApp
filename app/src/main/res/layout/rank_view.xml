<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="wya.whereyaat.LoginActivity"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot Locations"
        android:textStyle="italic|bold"
        android:textSize="30dp"
        android:gravity="center|top"
        android:paddingBottom="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:text="Hack GT"
        android:textSize="50dp"
        android:id="@+id/rank1TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="43 Friends"
        android:textSize="50dp"
        android:id="@+id/friends1TextView"
        android:paddingBottom="5dp"
        android:textColor="@color/colorPrimaryDark"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:text="GT v. Clemson"
        android:textSize="40dp"
        android:id="@+id/rank2TextView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="39 Friends"
        android:textSize="40dp"
        android:id="@+id/friends2TextView"
        android:paddingBottom="5dp"
        android:textColor="@color/colorPrimaryDark"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:text="CRC"
        android:textSize="35dp"
        android:id="@+id/rank3TextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 Friends"
        android:textSize="35dp"
        android:id="@+id/friends3TextView"
        android:paddingBottom="5dp"
        android:textColor="@color/colorPrimaryDark"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:text="Britain Dining Hall"
        android:textSize="30dp"
        android:id="@+id/rank4TextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13 Friends"
        android:textSize="30dp"
        android:id="@+id/friends4TextView"
        android:paddingBottom="5dp"
        android:textColor="@color/colorPrimaryDark"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:text="Home Park"
        android:textSize="25dp"
        android:id="@+id/rank5TextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Friends"
        android:textSize="25dp"
        android:id="@+id/friends5TextView"
        android:paddingBottom="5dp"
        android:textColor="@color/colorPrimaryDark"/>

</LinearLayout>
