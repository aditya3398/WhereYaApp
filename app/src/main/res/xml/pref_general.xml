<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="switch"
        android:summary="@string/pref_description_push_notifications"
        android:title="@string/pref_title_push_notifications" />

    <EditTextPreference
        android:defaultValue="15"
        android:inputType="number"
        android:maxLength="3"
        android:key="choose_num_friends"
        android:summary="Choose min number of friends required for push notification"
        android:title="Notify me"/>
    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->


</PreferenceScreen>
